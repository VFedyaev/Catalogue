@model PagedList<Catalogue.Models.Tables.Administration>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Органы управления";
    Layout = "~/Views/Shared/_AminPanel.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>Административные органы управления</h2>
                    <p>
                        <a class="btn btn-default" name="createButton" id="createButton" href="@Url.Action("Create","Administration")">Добавить новую запись</a>
                    </p>
                </div>
                <div class="content">
                    <table class="table" id="listTable">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Division.DivisionName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationName)
                            </th>                      
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationPost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationFax)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationEMail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationSkype)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdministrationCode)
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.Division.DivisionName)
                                </td>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.AdministrationName)
                                </td>                              
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.AdministrationPost)
                                </td>
                                <td class="td-title"> 
                                    @Html.DisplayFor(modelItem => item.AdministrationAddress)
                                </td>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.AdministrationFax)
                                </td>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.AdministrationEMail)
                                </td>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.AdministrationSkype)
                                </td>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.AdministrationCode)
                                </td>
                                <td>                                   
                                    <a class="btn btn-default" name="editButton" id="editButton" href="@Url.Action("Edit","Administration", new {id = item.AdministrationId})">Редактировать</a> |
                                    <a class="btn btn-default" name="detailsButton" id="detailsButton" href="@Url.Action("Details","Administration", new {id = item.AdministrationId})">Просмотреть</a> |
                                    <a class="btn btn-default" name="deleteButton" id="deleteButton" href="@Url.Action("Delete","Administration", new {id = item.AdministrationId})">Удалить</a>
                                </td>
                            </tr>
                        }
                    </table>

                    <div id="result"> </div>

                    <div id="paginationToDelete">
                        @Html.PagedListPager(Model, page => Url.Action("AjaxPositionList", new { page }),
                         PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "result", OnSuccess = "removeListAndPagination()" }))
                        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>