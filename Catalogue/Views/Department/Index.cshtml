@model PagedList<Catalogue.Models.Tables.Department>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Отделы";
    Layout = "~/Views/Shared/_AminPanel.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>Отделы</h2>
                    <p>
                        <a class="btn btn-default" name="createButton" id="createButton" href="@Url.Action("Create","Department")">Добавить новую запись</a>
                    </p>
                </div>
                <div class="content">
                    <table class="table" id="listTable">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().DepartmentName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Administration.AdministrationName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Administration.AdministrationName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    <a class="btn btn-default" name="editButton" id="editButton" href="@Url.Action("Edit","Department", new {id = item.DepartmentId})">Редактировать</a> |
                                    <a class="btn btn-default" name="detailsButton" id="detailsButton" href="@Url.Action("Details","Department", new {id = item.DepartmentId})">Просмотреть</a> |
                                    <a class="btn btn-default" name="deleteButton" id="deleteButton" href="@Url.Action("Delete","Department", new {id = item.DepartmentId})">Удалить</a>
                                </td>
                            </tr>
                        }
                    </table>

                    <div id="result"> </div>
                    <script>
                    $('.showList').click(function (e) {
                    var row_num = this.getAttribute("data-rows");
                    $ajax({
                    type: "GET",
                    url: "Department/AjaxPositionList",
                    data: { id: row_num },
                    success: function (data) {
                    $("#result").html(data);
                    },
                     error: function () {
                         alert("alert").html(data);
                     }
                     });
                    });
                    </script>

                    <div id="paginationToDelete">
                        @Html.PagedListPager(Model, page => Url.Action("AjaxPositionList", new { page }),
                         PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "result", OnSuccess = "hideBlock()" }))
                        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>