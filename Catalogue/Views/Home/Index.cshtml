@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                @using (Ajax.BeginForm("EmployeeSearch", "Home", null,
new AjaxOptions
{
UpdateTargetId = "results",
LoadingElementId = "loading"
},
new { @class = "ajax-form" }))
    {
                <div class="header">

                    <h3 id="title">Поиск</h3>
                    <div class="col-md-11">
                        <input type="text" class="form-control" name="name" placeholder="впишите имя сотрудника">
                    </div>
                    <div class="col-4">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><span class="fa fa-search"></span> Искать</button>
                        </span>
                    </div>
                </div><!-- /input-group -->
}
                <div id="loading" style="display:none"><p>Идет поиск</p></div>


                <hr>

                <div id="results"></div>

                <div class="content" id="accordion">
                    @foreach (var administration in ViewBag.Administrations)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#adm_@administration.AdministrationId">@administration.AdministrationName</a>
                    </h4>
                </div>
                <div id="adm_@administration.AdministrationId" class="panel-collapse collapse">
                    @foreach (var department in administration.Departments)
        {
            string name = department.DepartmentName;
            @Html.ActionLink(name, "DepartmentEmployees", "Home", new { AdministrationId = department.AdministrationId, DepartmentId = department.DepartmentId }, new { @class = "col-item" })
}
                </div>

            </div>
}
                </div>
            </div>
        </div>
    </div>
</div>