@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3 id="title">Поиск</h3>
    <div class="row">
        <div class="col-md-12">
            @using (Ajax.BeginForm("EmployeeSearch", "Home", null,
                new AjaxOptions {
                    UpdateTargetId = "results",
                    LoadingElementId="loading",
                    LoadingElementDuration=1000
                },
                new { @class = "ajax-form" }))
            {
                <div class="input-group">
                    <input type="text" class="form-control" name="name" placeholder="впишите имя сотрудника">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Искать</button>
                    </span>
                </div><!-- /input-group -->
            } 
            <div id="loading" style="display:none"><p>Идет поиск</p></div>
        </div>
    </div>
    <hr>

    <div id="results"></div>

    <div class="panel-group" id="accordion">
        @foreach (var administration in ViewBag.Administrations)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#adm_@administration.AdministrationId">@administration.AdministrationName</a>
                    </h4>
                </div>
                <div id="adm_@administration.AdministrationId" class="panel-collapse collapse">
                    @foreach (var department in administration.Departments)
                    {
                        string name = department.DepartmentName;
                        @Html.ActionLink(name, "DepartmentEmployees", "Home", new { DepartmentId = department.DepartmentId }, new { @class = "col-item" })
                    }
                </div>
                
            </div>
            }
    </div>
</div>