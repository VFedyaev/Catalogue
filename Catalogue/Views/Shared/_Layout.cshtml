<!doctype html>
 <html>
 <head>

     <meta charset="utf-8" />
     <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
     <link rel="icon" type="image/png" href="@Url.Content("~/favicon.png")">
     <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
     <title>@ViewBag.Title - Справочник</title>
     <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
     <meta name="viewport" content="width=device-width, initial-scale=1.0" />
     <!-- Bootstrap core CSS     -->
     @Styles.Render("~/Content/assets/css/bootstrap.min.css")

     <!-- Animation library for notifications   -->
     @Styles.Render("~/Content/assets/css/animate.min.css")



     @Styles.Render("~/Content/app.css")
     <!--  Light Bootstrap Table core CSS    -->
     @Styles.Render("~/Content/assets/css/light-bootstrap-dashboard.css?v=1.4.0")


     <!--  CSS for Purpose, don't include it in your project     -->
     @Styles.Render("~/Content/assets/css/demo.css")

     <!--     Fonts and icons     -->
     <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
     <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
     @Styles.Render("~/Content/assets/css/pe-icon-7-stroke.css")
 </head>
  <body>
      <div class="wrapper">
          <div class="sidebar" data-color="gray" data-image="@Url.Content("~/Content/assets/img/sidebar-5.jpg")">

              <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->

              <div class="sidebar-wrapper">
                  <div class="logo">
                      <a href="@Url.Action("Index", "Home")" class="simple-text">
                          Справочник НСК/ГВЦ
                      </a>
                  </div>

                  <ul class="nav">
                      <li class="active">
                          <a href="@Url.Action("Index", "Home")">
                              <i class="pe-7s-search"></i>
                              <p>Поиск</p>
                          </a>
                      </li>

                      <li class="active active-pro">
                          <button class="btn-color" data-color="azure" onclick="AzureColor()">1</button>
                      </li>
                  </ul>
              </div>
          </div>
          
          <div class="main-panel">
              <!-- settings -->
              <div class="fixed-plugin">
                  <div class="dropdown show-dropdown show">
                      <a href="#" data-toggle="dropdown">
                          <i class="fa fa-cog fa-2x"> </i>
                      </a>
                      <ul class="dropdown-menu">
                          <li class="header-title">Настройки интерфейса</li>
                          <li class="adjustments-line">
                              <a href="javascript:void(0)" class="switch-trigger background-color">
                                  <p>Фильтр цветов</p>
                                  <div class="pull-right">
                                      <span class="badge filter badge-black" data-color="black"></span>
                                      <span class="badge filter badge-blue" data-color="blue"></span>
                                      <span class="badge filter badge-green" data-color="green"></span>
                                      <span class="badge filter badge-gray" data-color="gray"></span>
                                      <span class="badge filter badge-red" data-color="red"></span>
                                      <span class="badge filter badge-purple active" data-color="purple"></span>
                                  </div>
                                  <div class="clearfix"></div>
                              </a>
                          </li>
                          <li class="header-title">Изображения фона</li>
                          <li class="active">
                              <a class="img-holder switch-trigger" href="javascript:void(0)">
                                  <img src="@Url.Content("~Content/assets/img/sidebar-1.jpg")">
                              </a>
                          </li>
                          <li>
                              <a class="img-holder switch-trigger" href="javascript:void(0)">
                                  <img src="@Url.Content("~Content/assets/img/sidebar-2.jpg")">
                              </a>
                          </li>
                          <li>
                              <a class="img-holder switch-trigger" href="javascript:void(0)">
                                  <img src="@Url.Content("~Content/assets/img/sidebar-3.jpg")">
                              </a>
                          </li>
                          <li>
                              <a class="img-holder switch-trigger" href="javascript:void(0)">
                                  <img src="@Url.Content("~Content/assets/img/sidebar-4.jpg")">
                              </a>
                          </li>
                          <li>
                              <a class="img-holder switch-trigger" href="javascript:void(0)">
                                  <img src="@Url.Content("~Content/assets/img/sidebar-5.jpg")">
                              </a>
                          </li>
                      </ul>
                  </div>
              </div>
              <!-- settings -->
              <nav class="navbar navbar-default navbar-fixed">
                  <div class="container-fluid">
                      <div class="navbar-header">
                          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                              <span class="sr-only">Toggle navigation</span>
                              <span class="icon-bar"></span>
                              <span class="icon-bar"></span>
                              <span class="icon-bar"></span>
                          </button>
                          @Html.ActionLink("Справочник НСК/ГВЦ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                      </div>
                      <div class="collapse navbar-collapse">

                          @Html.Partial("_LoginPartial")
                      </div>
                  </div>
              </nav>

              <div class="content">
                  @RenderBody()
              </div>

              <footer class="footer">
                  <div class="container-fluid">

                      @if (DateTime.Now.Year == 2018)
            {
              <p class="copyright pull-right">&copy; @DateTime.Now.Year Отдел программирования</p> }
else
{<p class="copyright pull-right">&copy; 2018 - @DateTime.Now.Year Отдел программирования</p>}

                  </div>

              </footer>
          </div>


      </div>
      <script src="@Url.Content("~/Content/assets/js/jquery.3.2.1.min.js")" type="text/javascript"></script>
      <script src="@Url.Content("~/Content/assets/js/bootstrap.min.js")" type="text/javascript"></script>

      <!--  Charts Plugin -->
      <script src="@Url.Content("~/Content/assets/js/chartist.min.js")"></script>

      <!--  Notifications Plugin    -->
      <script src="@Url.Content("~/Content/assets/js/bootstrap-notify.js")"></script>

      <!--  Google Maps Plugin
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
        -->
      <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
      <script src="@Url.Content("~/Content/assets/js/light-bootstrap-dashboard.js?v=1.4.0")"></script>

      <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
      <script src="@Url.Content("~/Content/assets/js/demo.js")"></script>
      <script src="@Url.Content("~/Scripts/js/settings.js")"> </script>

  </body>
    @Scripts.Render("~/bundles/jquery")
   @Scripts.Render("~/bundles/bootstrap")
   @Scripts.Render("~/Scripts/app.js")
   @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")

                                         <!--   Core JS Files   -->

   @RenderSection("scripts", required: false)
   </html>