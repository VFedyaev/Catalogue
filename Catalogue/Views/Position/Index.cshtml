@model PagedList<Catalogue.Models.Tables.Position>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Должности";
    Layout = "~/Views/Shared/_AminPanel.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>Должности</h2>
                    <p>
                        <a class="btn btn-default" name="createButton" id="createButton" href="@Url.Action("Create","Position")">Добавить новую запись</a>
                    </p>
                </div>

                <hr />
                @using (Ajax.BeginForm("AdminSearch", "Search", null,
                new AjaxOptions
                {
                    UpdateTargetId = "results",
                    LoadingElementId = "loading",
                    OnSuccess = "hideAccordion()"
                },
                new { @class = "ajax-form" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="type" value="position" />
                    <div class="header">
                        <div class="row">
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="title" placeholder="Введите название должности">
                            </div>
                            <div class="col-md-1">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><span class="fa fa-search"></span> Искать</button>
                                </span>
                            </div>
                        </div>
                    </div><!-- /input-group -->
                }
                <div id="loading" style="display:none"><p>Идет поиск</p></div>


                <hr>

                <div id="results"></div>

                <div class="content" id="accordion">
                    <table class="table" id="listTable" style="table-layout: fixed; width: 100%">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().PositionName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="td-title">
                                    @Html.DisplayFor(modelItem => item.PositionName)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-default" name="editButton" id="editButton" href="@Url.Action("Edit","Position", new {id = item.PositionId})" title="Редактировать" data-toggle="tooltip" data-placement="top"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        <a class="btn btn-default" name="detailsButton" id="detailsButton" href="@Url.Action("Details","Position", new {id = item.PositionId})"><i class="fa fa-eye" aria-hidden="true" title="Просмотреть" data-toggle="tooltip" data-placement="top"></i></a>
                                        <a class="btn btn-default" name="deleteButton" id="deleteButton" href="@Url.Action("Delete","Position", new {id = item.PositionId})"><i class="fa fa-trash" aria-hidden="true" title="Удалить" data-toggle="tooltip" data-placement="top"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>

                    <div id="result"> </div>

                    <div id="paginationToDelete">
                        @Html.PagedListPager(Model, page => Url.Action("AjaxPositionList", new { page }),
                         PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "result", OnSuccess = "removeListAndPagination()" }))
                        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>