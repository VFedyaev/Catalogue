@model PagedList<Catalogue.Models.Position>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AminPanel.cshtml";
}

<h2>Должности</h2>

<p>
    @Html.ActionLink("Добавить новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().PositionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PositionName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.PositionId }) |
            @Html.ActionLink("Просмотреть", "Details", new { id=item.PositionId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.PositionId })
        </td>
    </tr>
}

</table>
<br />

Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))